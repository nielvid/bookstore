<%-include('head.ejs') %>
<body>
	<div class="container-fluid banner">
		<div class="row">
			<div id="baner">
				<h1>My Book Store</h1>
			</div>
		</div>
	</div>
	<div class="container" id='shelf'>
		<div class="row" >
			<div class="col-row-8" > 
				<h3>Add a New book to the Bookstore</h3>
		
			</div>
		</div>
		
	</div>
	<div class="container">
		<div class="row" >
		<form action="/addbook" method="post" >
			<div  class="form-group" >
				<input type="text" name="id" placeholder="book id" required="true" class="form-control">
				<input type="text" name="title" placeholder="book Title" required="true" class="form-control">
				<input type="text" name="code" placeholder="book code" required="true" class="form-control">
				<input type="text" name="author" placeholder="Author" required="true" class="form-control">
				<input type="date" name="year" placeholder="Year published" required="true" class="form-control">
				<input type="text" name="publisher" placeholder="book publisher" required="true" class="form-control">
			</div>
			<input type="submit" name="Add Book"  class="form-control">	
		</form>
	</div>
	
</div>


	<%-include('footer.ejs')%>
	  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/9f5cd78fa4.js" crossorigin="anonymous"></script>
</body>
</html>
